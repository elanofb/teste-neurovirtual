@model PagedList.IPagedList<LogEmail>
@using DAL.Entities
<table class="table table-hover table-striped" id="tbCaixaEntrada" data-url-visualizacao="@Url.Action("registrar-visualizacao")">
	<tbody>
		@if (Model.Count > 0) {
			foreach (var Email in Model) {
				<tr class="email-@Email.id">
					<td class="width-50" style="padding-left:11px;"><input type="checkbox" name="checkbox-email" id="email-@Email.id" value="@Email.id" class="no-icheck" /></td>
					<td class="mailbox-name @Email.cssClasseLeitura()">
						<a href="javascript:void(0);" onclick="CorreioInterno.visualizarNovoEmail(this);" data-url="@Url.Action("visualizar-email", new{ id = Email.id} )" data-id="@Email.id"> @(String.IsNullOrEmpty(Email.nomeRemetente) ? Email.emailRemetente : Email.nomeRemetente) </a>
					</td>
					<td class="mailbox-subject @Email.cssClasseLeitura()">
						<a href="javascript:void(0);" onclick="CorreioInterno.visualizarNovoEmail(this);" data-url="@Url.Action("visualizar-email", new { id = Email.id })" data-id="@Email.id">@Email.assunto</a>
					</td>
					<td class="mailbox-attachment @Email.cssClasseLeitura()"></td>
					<td class="mailbox-date width-125 @Email.cssClasseLeitura()">@Email.dtEnvio</td>
				</tr>
			}
		} else {
			<tr>
				<td colspan="5" class="text-center">Você não possui mensagens no momento.</td>
			</tr>
		}
	</tbody>
</table>