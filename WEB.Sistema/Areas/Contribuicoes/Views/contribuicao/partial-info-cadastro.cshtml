@model WEB.Areas.Contribuicoes.ViewModels.ContribuicaoPadraoForm

@if (Model.Contribuicao.id > 0 && Model.Contribuicao.dtCadastro != DateTime.MinValue) {
    <div class="form-horizontal">
        <div class="col-xs-2 col-lg-2">
            <label class="no-margin">ID</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.Contribuicao.id" />
        </div>
        <div class="col-xs-3 col-lg-2">
            <label class="no-margin">Cadastrado em:</label>
            <input type="text" class="form-control input-sm text-center" readonly="readonly" value="@Model.Contribuicao.dtCadastro" />
        </div>
        <div class="col-xs-3 col-lg-2">
            <label class="no-margin">Alterado em:</label>
            <input type="text" class="form-control input-sm text-center" readonly="readonly" value="@Model.Contribuicao.dtAlteracao" />
        </div>

    </div>
    <div class="clearfix"></div><br />
}