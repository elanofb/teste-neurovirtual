@using WEB.Helpers
@model List<DAL.Organizacoes.Organizacao>

@{
    ViewBag.titlePage = "Configurações de Etiquetas";
}

<div class="box box-primary">

    @Html.headerBox("Resultados", "fa fa-list")

    <div class="box-body">
        <table class="table table-bordered table-striped dataTable">
            <thead>
                <tr role="row">
                    <th>Organização</th>
                    <th width="50">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any()) {
                    foreach (var Item in Model) {
                        <tr>
                            <td class="text-left">@(Item.Pessoa?.nome ?? "Padrão do Sistema")</td>
                            <td class="text-center box-acoes">
                                <a href="@Url.Action("index", new { idOrganizacao = Item.id })" title="Editar Registro" data-toggle="tooltip">
                                    <i class="fa fa-edit"></i>
                                </a> &nbsp;
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td class="text-center" colspan="2">Nenhum registro cadastrado</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
