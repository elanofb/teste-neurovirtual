@model List<DAL.Configuracoes.ConfiguracaoPerfilComissionavel>
@{
    Layout = null;
}

<div class="col-xs-12 box box-solid internal-default">

    <div class="table-responsive">
        <div class="dataTables_wrapper form-inline" role="grid">
            <table class="table table-bordered table-striped dataTable">
                <thead>
                    <tr role="row">
                        <th>Grupo de Usuários</th>
                        <th class="width-130">Cadastro</th>
                        <th width="80">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0) {
                        foreach (var Item in Model) {
                            <tr>
                                <td>@Item.PerfilAcesso.descricao</td>
                                <td class="text-center">@Item.dtCadastro.ToShortDateString()</td>
                                <td class="text-left box-acoes">
                                    @Html.linkAjaxExcluir(Item.id, "N", Url.Action("excluir-perfil-comissionavel", "ConfiguracaoComissao"), "", "ConfiguracaoComissao.itemExcluido()")
                                </td>
                            </tr>
                        }
                    } else {
                        <tr>
                            <td class="text-center" colspan="3">Nenhum registro cadastrado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div class="clearfix"></div>
