@model WEB.Areas.Configuracao.ViewModels.ConfiguracaoImagemForm
@using MvcFlashMessages
@using WEB.Areas.Arquivos.Helpers

@{
	ViewBag.titlePage = "Configurações de Imagens";

    string versaoImagem = DateTime.Now.ToString("yyyyMMddHHmmss");
}

@section scripts{
    @Html.includeJSModuloArquivos()
}

@section styles {
    @Html.includeCSSModuloArquivos()

}

@section breadcrump{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("listar")" class="active fs-14"><i class="fa fa-arrow-left"></i> Voltar</a></li>
    </ol>
}

<div class="">
	@Html.RenderFlash()

    @using (Html.BeginForm("salvar-imagem", null, FormMethod.Post, new {role = "form", @class = "tab-content", enctype = "multipart/form-data"})) {

        @Html.ValidationSummary(false)
        @Html.HiddenFor(m => m.idOrganizacao)

        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Sistema - login</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlSistemaLogin?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlSistemaLogin?v=@versaoImagem" alt="Imagem para tela de login do sistema" class="moldura-img margin-bottom-10" style="height: 50px;" /><br/>
                        </a>
                        @Html.inputFileSimples("SistemaLogin")<br/>
                        <p class="fs-9 break-word">@Model.urlSistemaLogin</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Sistema - topo</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlSistemaTopo?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlSistemaTopo?v=@versaoImagem" alt="Imagem para header do sistema" class="moldura-img margin-bottom-10" style="height: 50px;" /><br/>
                        </a>
                        @Html.inputFileSimples("SistemaTopo")<br/>
                        <p class="fs-9 break-word">@Model.urlSistemaTopo</p>
                    </div>
                </div>
            </div><div class="clearfix visible-sm"></div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Sistema - rodapé</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlSistemaRodape?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlSistemaRodape?v=@versaoImagem" alt="Imagem para o rodapé do sistema" class="moldura-img margin-bottom-10" style="height: 50px;" /><br />
                        </a>
                        @Html.inputFileSimples("SistemaRodape")<br />
                        <p class="fs-9 break-word">@Model.urlSistemaRodape</p>
                    </div>
                </div>
            </div>
            <div class="clearfix visible-md"></div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Sistema - E-mails</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlSistemaEmail?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlSistemaEmail?v=@versaoImagem" alt="Imagem para e-mails" class="moldura-img margin-bottom-10" style="height: 50px;" /><br/>
                        </a>
                        @Html.inputFileSimples("SistemaEmail")<br/>
                        <p class="fs-9 break-word">@Model.urlSistemaEmail</p>
                    </div>
                </div>
            </div><div class="clearfix visible-sm visible-lg"></div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Sistema - Impressão</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlSistemaPrint?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlSistemaPrint?v=@versaoImagem" alt="Imagem para impressoes" class="moldura-img margin-bottom-10" style="height: 50px;" /><br />
                        </a>
                        @Html.inputFileSimples("SistemaPrint")<br/>
                        <p class="fs-9 break-word">@Model.urlSistemaPrint</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">Login - BG</div>
                    <div class="panel-body bg-gray overflow-hidden">
                        <a href="@Model.urlBgLogin?v=@versaoImagem" class="fancy">
                            <img src="@Model.urlBgLogin?v=@versaoImagem" alt="Imagem para fundo da tela inicial" class="moldura-img margin-bottom-10" style="height: 50px;" /><br />
                        </a>
                        @Html.inputFileSimples("BgLogin")<br/>
                        <p class="fs-9 break-word">@Model.urlBgLogin</p>
                    </div>
                </div>
            </div><div class="clearfix visible-sm visible-md"></div>
        </div>


        <div class="text-right">
            <input type="submit" name="enviar" value="Salvar Configurações" class="btn btn-primary" />
        </div>
    }
</div>