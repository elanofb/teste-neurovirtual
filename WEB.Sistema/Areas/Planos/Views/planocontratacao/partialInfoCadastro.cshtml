@model WEB.Areas.Planos.ViewModels.PlanoContratacaoForm

@if (Model.PlanoContratacao.id > 0)
{
    <div class="form-horizontal">
        <div class="col-md-1">
            <label>ID</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.PlanoContratacao.id" />
        </div>
        <div class="col-md-2">
            <label>Cadastrado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.PlanoContratacao.dtCadastro" />
        </div>
        <div class="col-md-2">
            <label>Alterado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.PlanoContratacao.dtAlteracao" />
        </div>
    </div>
    
    <div class="clearfix"></div>
}