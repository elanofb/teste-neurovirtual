@model WEB.Areas.ConfiguracoesScripts.ViewModels.ConfiguracaoScriptsForm

@using DAL.Permissao.Security.Extensions
@using WEB.Areas.Associacoes.Helpers
@using MvcFlashMessages

@{
    ViewBag.titlePage = "Configurações de Scripts";
}

@section breadcrump{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("listar")" class="active fs-14"><i class="fa fa-arrow-left"></i> Voltar</a></li>
    </ol>
}

<div class="row">
    
    <div class="col-sm-12 box-primary">
        <div class="nav-tabs-custom">

            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#tab-associado-pf" data-toggle="tab">Principal</a></li>
            </ul>
            @using (Html.BeginForm("editar", null, FormMethod.Post, new {role = "form", @class = "tab-content", enctype = "multipart/form-data"})) {

                @Html.RenderFlash()
                @Html.ValidationSummary(false)

                <div id="tab-associado-pf" role="tabpanel" class="tab-pane active">

                    <div class="col-sm-12">

                        <div class="row">
                            
                            @Html.infoCadastro(Model.ConfiguracaoScripts.id, Model.ConfiguracaoScripts.dtCadastro, null)

                            
                            @if (User.idOrganizacao() == 0) {

                                <div class="col-sm-4 col-md-3">
                                    <label>Organização</label>
                                    @Html.DropDownListFor(m => m.ConfiguracaoScripts.idOrganizacao, AssociacaoHelper.getInstance.selectList(Model.ConfiguracaoScripts.idOrganizacao), "Padrão", new {@class = "form-control input-sm", type = "number"})
                                </div>
                                <div class="clearfix"></div>

                            }

                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-sm-12">

                        <h4 class="separator-form">Configurações de Scripts</h4>

                        <div class="row">

                            <div class="col-md-6">
                                <label class="fs-9">Google Analytics</label>
                                @Html.TextAreaFor(x => x.ConfiguracaoScripts.googleAnalylics, new {@class = "form-control input-sm", rows = 10})
                            </div>

                            <div class="col-md-6">
                                <label class="fs-9">Google Maps</label>
                                @Html.TextAreaFor(x => x.ConfiguracaoScripts.googleMaps, new {@class = "form-control input-sm", rows = 10})
                            </div>
                            <div class="clearfix"></div>

                            <div class="col-md-6">
                                <label class="fs-9">Script Froala</label>
                                @Html.TextAreaFor(x => x.ConfiguracaoScripts.scriptFroala, new { @class = "form-control input-sm", rows = 10 })
                            </div>

                            <div class="col-md-6">
                                <label class="fs-9">Script Chat</label>
                                @Html.TextAreaFor(x => x.ConfiguracaoScripts.scriptChat, new {@class = "form-control input-sm", rows = 10})
                            </div>
                            <div class="clearfix"></div>

                        </div>
                    </div>
                    <div class="clearfix"></div><br />

                </div>

                <div class="col-sm-12 text-right">
                    @Html.botaoSalvar()
                </div>
                <div class="clearfix"></div><br/>

            }
        </div>
    </div>
</div>