@model AssociadoConsultaForm
@using WEB.Areas.AssociadosConsultas.ViewModels
@using WEB.Areas.Associados.Helpers
@using WEB.Areas.Pessoas.Helpers


@using (Html.BeginForm("consultar", null, FormMethod.Post, new { id = "fmFiltro", @class = "formFiltro" })) {

    @Html.Hidden("nroPagina", "", new { id = "nroPagina" })

    <div class="col-lg-2 col-md-3">
        <label>Busca em Lote</label>
        @Html.TextAreaFor(m => m.valorBuscaLote, new { @class = "form-control input-sm", rows = "7" })
    </div>

    <div class="col-lg-10 col-md-9">
                
        <div class="row">
@*
            <div class="col-md-3 col-xs-6">
                <label>Tipo de Membro</label><br />
                @Html.ListBoxFor(m => m.idsTipoAssociado, TipoAssociadoHelper.getInstance.multiSelectList(Model.idsTipoAssociado), new {@class = "form-control input-sm input-multiselect", multiple = "multiple"})
            </div>

            <div class="col-md-4 col-xs-6">
                <label>Unidade</label><br />
                @Html.ListBoxFor(m => m.idsUnidades, UnidadeHelper.getInstance.seleListMulti(Model.idsUnidades), new {@class = "form-control input-sm input-multiselect", multiple = "multiple"})
            </div>*@

            <div class="clearfix visible-sm visible-xs"></div>

            <div class="col-lg-4 col-md-5 col-xs-6">
                <label>Data de Cadastro</label>
                <div class="input-group no-padding">
                    @Html.TextBoxFor(m => m.dtCadastroInicio, new {@class = "form-control input-sm input-datepicker", alt = "date"})
                    <span class="input-group-addon"></span>
                    @Html.TextBoxFor(m => m.dtCadastroFim, new {@class = "form-control input-sm input-datepicker", alt = "date"})
                </div>
            </div>

            <div class="col-md-3 col-xs-6">
                <label>Sexo</label>
                @Html.DropDownListFor(m => m.flagSexo, ComboHelper.selectListSexo(Model.flagSexo), "Todas", new { @class = "form-control input-sm" })
            </div>
            <div class="col-md-3 col-xs-6">
                <label>Tipo de Pessoa</label>
                @Html.DropDownListFor(m => m.flagTipoPessoa, TipoPessoaHelper.selectList(Model.flagTipoPessoa), "Todas", new { @class = "form-control input-sm" })
            </div>

            <div class="col-md-2 col-xs-6">
                <label>Status</label>
                @Html.DropDownListFor(m => m.ativo, AssociadoHelper.selectListAtivo(Model.ativo, true), "Todos", new {@class = "form-control input-sm"})
            </div>

            <div class="clearfix visible-sm visible-xs"></div>

            <div class="col-md-2 col-xs-6">
                <label>Tipo de Saída</label>
                @Html.DropDownListFor(m => m.flagTipoSaida, TipoSaidaHelper.selectListTipoSaida(Model.flagTipoSaida), new {@class = "form-control input-sm"})
            </div>
            
            @*<div class="col-md-2 col-sm-6">
                <label>Documentos Aprovados?</label>
                @Html.DropDownListFor(m => m.flagDocumentosAprovados, ComboHelper.selectListTrueFalse(Model.flagDocumentosAprovados), "Todos", new {@class = "form-control input-sm"})
            </div>*@
            
            <div class="col-lg-4 col-md-4 col-xs-6">
                <label>Buscar</label>
                @Html.buttonSearch(UtilRequest.getString("valorBusca"))
            </div>

            <div class="clearfix"></div>

        </div>
    </div>
    <div class="clearfix"></div><br/>
            
}