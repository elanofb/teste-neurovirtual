@model WEB.Areas.Financeiro.ViewModels.FormaPagamentoForm
@if (Model.FormaPagamento.id > 0) { 
<div class="form-horizontal">
	<div class="col-md-6">
		<a class="btn btn-default bg-gray"><strong>ID:</strong> @Model.FormaPagamento.id</a> &nbsp;
		<a class="btn btn-default bg-gray"><strong>Cadastro:</strong> @Model.FormaPagamento.dtCadastro</a> &nbsp;
		<a class="btn btn-default bg-gray"><strong>Alterado em:</strong> @Model.FormaPagamento.dtAlteracao</a>
	</div>
</div>
<div class="clearfix"></div><br />
}