@model List<DAL.Organizacoes.Organizacao>

@{
    ViewBag.titlePage = "Documentos Digitais";
}

<div class="box box-primary">

    @Html.headerBox("Resultados", "fa fa-list")

    <div class="box-body">

        <table class="table table-bordered table-striped dataTable">
            <thead>
                <tr role="row">
                    <th>Organização</th>
                    <th class="width-50">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-left">Padrão do Sistema</td>
                    <td class="text-center box-acoes">
                        <a href="@Url.Action("listar")" title="Editar Registro" data-toggle="tooltip"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>

                @if (Model.Any()) {
                    foreach (var Item in Model) {
                        <tr>
                            <td class="text-left">@(Item.Pessoa.nome ) </td>
                            <td class="text-center box-acoes">
                                <a href="@Url.Action("listar", new{ idOrganizacao = Item.id })" title="Editar Configurações" data-toggle="tooltip"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td class="text-center" colspan="4">Nenhum registro localizado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="clearfix"></div>