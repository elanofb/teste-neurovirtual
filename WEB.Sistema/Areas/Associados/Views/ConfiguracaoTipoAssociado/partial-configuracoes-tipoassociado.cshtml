@using MvcFlashMessages

@model WEB.Areas.Associados.ViewModels.ConfiguracaoTipoAssociadoForm

@using (Ajax.BeginForm("salvar", "ConfiguracaoTipoAssociado", new { Area = "Associados" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "boxConfiguracoesTipoAssociado", OnSuccess = "DefaultSistema.iniciarPlugins('#boxConfiguracoesTipoAssociado')" })) {

    @Html.ValidationSummary(false)

    @Html.RenderFlash()

    @Html.HiddenFor(x => x.ConfiguracaoTipoAssociado.idOrganizacao)
    @Html.HiddenFor(x => x.ConfiguracaoTipoAssociado.idTipoAssociado)
    <div class="col-sm-12">

        <div class="row">
            <div class="col-sm-6 col-md-3">
                <label class="fs-9">Validade da carteirinha  (em meses)</label>
                @Html.TextBoxFor(x => x.ConfiguracaoTipoAssociado.qtdeMesesValidade, new { @class = "form-control input-sm", type = "number" })
            </div>
            <div class="col-sm-6 col-md-3">
                <label class="fs-9">Validade da carteirinha  (em data fixa)</label>
                @Html.TextBoxFor(x => x.ConfiguracaoTipoAssociado.dtValidadeFixa, new { @class = "form-control input-sm input-datepicker", alt = "date" })
            </div>
            <div class="clearfix"></div>
            
            <div class="col-md-12">
                <label class="fs-9">Html da Carteirinha</label>
                @Html.TextAreaFor(m => m.ConfiguracaoTipoAssociado.htmlCarteirinha, new {@class = "form-control input-sm", rows = 20})
            </div>
        </div>
    </div>
    <div class="clearfix"></div><br/>

    <div class="col-sm-12 text-right">
        @Html.botaoSalvar()
    </div>
    <div class="clearfix"></div><br />
}

<script>
    $(document).ready(function () {
        ConfiguracaoTipoAssociado.init();
    });
</script>
