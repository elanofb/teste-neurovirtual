@model WEB.Areas.Associados.ViewModels.AssociadoForm
@using WEB.Areas.OrgaosClasses.Helpers

<h4 class="separator-form">Dados Corporativos</h4>
<div class="row">
    <div class="col-md-3 col-lg-2">
        <label>Órgão de Classe?</label>
        @Html.DropDownListFor(m => m.Associado.Pessoa.idOrgaoClasse, OrgaoClasseHelper.getInstance.selectList(Model.Associado.Pessoa.idOrgaoClasse), "...", new { @class = "form-control input-sm" })
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.idOrgaoClasse)
    </div>
    <div class="clearfix"></div>
    
    <div class="col-md-3 col-lg-2">
        <label>Tem Fins Lucrativos?</label>
        @Html.DropDownListFor(m => m.Associado.Pessoa.flagFinsLucrativos, ComboHelper.selectListTrueFalse(Model.Associado.Pessoa.flagFinsLucrativos), "...", new {@class = "form-control input-sm"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.flagFinsLucrativos)
    </div>
    <div class="col-md-3 col-lg-2">
        <label>Optante Simples Nacional?</label>
        @Html.DropDownListFor(m => m.Associado.Pessoa.flagOptanteSimplesNacional, ComboHelper.selectListTrueFalse(Model.Associado.Pessoa.flagOptanteSimplesNacional), "...", new {@class = "form-control input-sm"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.flagOptanteSimplesNacional)
    </div>
    <div class="clearfix"></div>

    <div class="col-md-3 col-lg-2">
        <label>Nº Funcionários CLT</label>
        @Html.TextBoxFor(m => m.Associado.Pessoa.qtdeEmpregadosCLT, new {@class = "form-control input-sm", type = "number", maxlength = "5"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.qtdeEmpregadosCLT)
    </div>
    <div class="col-md-3 col-lg-2">
        <label>Nº Funcionários Terceirizados</label>
        @Html.TextBoxFor(m => m.Associado.Pessoa.qtdeEmpregadosTerceiros, new {@class = "form-control input-sm", type = "number", maxlength = "5"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.qtdeEmpregadosTerceiros)
    </div>
    <div class="col-md-3 col-lg-2">
        <label>Nº Estagiários</label>
        @Html.TextBoxFor(m => m.Associado.Pessoa.qtdeEstagiarios, new {@class = "form-control input-sm", type = "number", maxlength = "5"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.qtdeEstagiarios)
    </div>
    <div class="col-md-3 col-lg-2">
        <label>Nº Menores Aprendizes</label>
        @Html.TextBoxFor(m => m.Associado.Pessoa.qtdeMenorAprendiz, new {@class = "form-control input-sm", type = "number", maxlength = "5"})
        @Html.ValidationMessageFor(m => m.Associado.Pessoa.qtdeMenorAprendiz)
    </div>
    <div class="clearfix"></div>
</div>