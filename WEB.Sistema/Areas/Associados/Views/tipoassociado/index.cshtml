@model List<DAL.Organizacoes.Organizacao>
@{
    ViewBag.titlePage = "Tipos de Membros";

}
@section styles {
    <link href="@UtilConfig.linkResourses("css/associatec/list-custom.css")" rel="stylesheet"/>
    <link href="@UtilConfig.linkResourses("css/associatec/modulos/widgets.css")" rel="stylesheet"/>
}
<div class="box box-primary">
    <div class="box-body">
        @if (Model.Any()) {
            foreach (var Item in Model) {
                <div class="box-info-item-dotted bordered-destaque">
                    <div class="row">
                        <div class="col-sm-9">
                            <span data-toggle="tooltip" title="Nome Da associação" class="text-bold">@(Item.Pessoa.nome )</span><br/>
                        </div>
                        <div class="col-sm-3 text-right">
                            <div class="dropdown pull-right">
                                <a href="javascript:;" class="dropdown-toggle text-black fs-16" type="button" data-toggle="dropdown">
                                    <i class="fa fa-cog"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li>
                                        <a href="@Url.Action("listar", new {idOrganizacao = Item.id})" title="Editar Registro" data-toggle="tooltip">
                                            <i class="fa fa-edit"></i> Editar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <div class="alert alert-info" colspan="4">Nenhum registro cadastrado</div>
        }
    </div>
</div>


