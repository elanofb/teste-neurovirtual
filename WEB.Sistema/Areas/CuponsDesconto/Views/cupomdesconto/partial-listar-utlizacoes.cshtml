@model List<DAL.Financeiro.TituloReceitaPagamentoVW>
@using DAL.Financeiro
@using WEB.Helpers

@if (!Model.Any()) {
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-info">Nenhuma utilização foi encontrado.</div>
        </div>
    </div>
}

@if (Model.Any()) {
    <div class="col-sm-12">
        <div class="row">
            @foreach (TituloReceitaPagamentoVW OItem in Model) {

                <div class="col-sm-12 box-info-item bordered-destaque">
                    <div class="row">
                        <div class="col-sm-5">
                            <span><i class="fa fa-file-o"></i> @OItem.descricaoTitulo</span><br />
                            <span><i class="fa fa-user"></i> @OItem.nomePessoa</span><br/>
                        </div>
                        <div class="col-sm-2">
                            <span data-toggle="tooltip" title="Dt. Cadastro"><i class="far fa-calendar-alt"></i> @OItem.dtCadastro.exibirData()</span> <br/>
                            <span data-toggle="tooltip" title="Dt. Pagamento"><i class="fa fa-calendar-check"></i> @OItem.dtPagamento.exibirData() </span>
                        </div>

                        <div class="col-sm-3">
                            <span data-toggle="tooltip" title="Meio de Pagamento"><i class="glyphicons glyphicons-small-payments"></i> @(OItem.descricaoMeioPagamento)</span><br />
                            <span data-toggle="tooltip" title="Forma de Pagamento"><i class="glyphicons glyphicons glyphicons-fees-payments"></i> @(OItem.descricaoFormaPagamento)</span><br />
                        </div>

                        <div class="col-sm-2">
                            <div class="row">
                                <span data-toggle="tooltip" title="Valor Original"><i class="far fa-money-bill"></i> @OItem.valorOriginal</span><br />
                                <span data-toggle="tooltip" title="Valor Recebido"><i class="far fa-money-bill"></i> @OItem.valorRecebido</span><br/>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
    <div class="clearfix"></div>
    @*@(Html.paginarRegistros(Model, Html.PagedListPager(Model, nroPagina => UtilRequest.linkPaginacao(nroPagina, "index"), PagedListRenderOptions.OnlyShowFivePagesAtATime)))*@
}