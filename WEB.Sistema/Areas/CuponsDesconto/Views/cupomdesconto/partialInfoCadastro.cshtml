@model WEB.Areas.CuponsDesconto.ViewModels.CupomDescontoForm

@if (Model.CupomDesconto.id > 0) {
    <div class="form-horizontal">
        <div class="col-sm-2 col-lg-1">
            <label>ID</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.CupomDesconto.id" />
        </div>
        <div class="col-md-2">
            <label>Código</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.CupomDesconto.codigo" />
        </div>
        <div class="col-md-2">
            <label>Cadastrado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.CupomDesconto.dtCadastro" />
        </div>
        <div class="col-md-2">
            <label>Alterado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.CupomDesconto.dtAlteracao" />
        </div>

        @if (Model.CupomDesconto.flagUtilizado) {
            <div class="col-md-2">
                <label>Utilizado em:</label>
                <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.CupomDesconto.dtUso.Value" />
            </div>
        }
        
        @if ( (!String.IsNullOrEmpty(Model.CupomDesconto.emailPrincipal) || !String.IsNullOrEmpty(Model.CupomDesconto.emailSecundario)) && !Model.CupomDesconto.dtUso.HasValue) { 
            <div class="col-md-2 pull-right padding-top-20 no-padding-right">
                <a href="javascript:void(0);" onclick="CupomDesconto.enviarCupom('@Model.CupomDesconto.id');" class="btn btn-success pull-right">
                    <i class="fa fa-arrow-circle-o-right"></i>
                    Enviar cupom por e-mail
                </a>
            </div>
        }
    </div>
    
    <div class="clearfix"></div>
}