@model WEB.Areas.Produtos.ViewModels.TipoProdutoForm

@{
	Layout = "~/views/shared/associatec/masterpage-edit.cshtml";
	ViewBag.titlePage = "Tipo Produto";
}

@section breadcrump{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("listar")" class="active fs-14"><i class="fa fa-arrow-left"></i> Voltar</a></li>
    </ol>
}


@section navTabs{
	<ul class="nav nav-tabs">
		<li class="active"><a href="#tab-1" data-toggle="tab">Principal</a></li>
	</ul>
}

@section tabContent{
	<div id="tab-1" class="tab-pane active">
		
	    @Html.infoCadastro(Model.TipoProduto.id, Model.TipoProduto.dtCadastro, Model.TipoProduto.dtAlteracao)

	    @using (Html.BeginForm("editar", null, FormMethod.Post, new { role = "form", @class = "default" })) {
			
			@Html.HiddenFor(m => m.TipoProduto.id)

			@Html.ValidationSummary(false)

			<div class="form-horizontal">
                
			    <h4 class="separator-form">Dados Principais do Tipo de Produto</h4>

			    <div class="col-md-6">
			        @Html.labelRequired("Descrição")
			        @Html.TextBoxFor(m => m.TipoProduto.descricao, new { @class = "form-control input-sm", maxlength = "100" })
			        @Html.ValidationMessageFor(m => m.TipoProduto.descricao)
			    </div>
			    <div class="clearfix"></div>
                
			    <div class="col-md-2">
			        <label>Produto?</label>
			        @Html.DropDownListFor(m => m.TipoProduto.flagProduto, ComboHelper.selectListTrueFalse(Model.TipoProduto.flagProduto), "...", new { @class = "form-control input-sm" })
			        @Html.ValidationMessageFor(m => m.TipoProduto.flagProduto)
			    </div>
                
			    <div class="col-md-2">
			        <label>Serviço?</label>
			        @Html.DropDownListFor(m => m.TipoProduto.flagServico, ComboHelper.selectListTrueFalse(Model.TipoProduto.flagServico), "...", new { @class = "form-control input-sm" })
			        @Html.ValidationMessageFor(m => m.TipoProduto.flagServico)
			    </div>
                

			    <div class="col-md-2">
					<label>Status</label>
					@Html.DropDownListFor(m => m.TipoProduto.ativo, ComboHelper.selectListStatus(Model.TipoProduto.ativo), new { @class = "form-control input-sm" })
					@Html.ValidationMessageFor(m => m.TipoProduto.ativo)
				</div>
				<div class="clearfix"></div>

			</div>
			<div class="clearfix"></div><br />

			<div class="col-xs-12 text-right">
	            @Html.exibirBotoesFormulario(Url.Action("listar"), "N")
			</div>
	        <div class="clearfix"></div>

		}

	</div>
}

