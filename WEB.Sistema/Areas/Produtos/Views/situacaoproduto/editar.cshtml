@using DAL.Permissao.Security.Extensions
@using WEB.Areas.Associacoes.Helpers
@using WEB.Areas.Produtos.Helpers
@model WEB.Areas.Produtos.ViewModels.ProdutoSituacaoForm

@{
	Layout = "~/views/shared/associatec/masterpage-edit.cshtml";
	ViewBag.titlePage = "Situação do Produto";
}

@section breadcrump{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("listar")" class="active fs-14"><i class="fa fa-arrow-left"></i> Voltar</a></li>
    </ol>
}


@section navTabs{
	<ul class="nav nav-tabs">
		<li class="active"><a href="#tab-1" data-toggle="tab">Principal</a></li>
	</ul>
}

@section tabContent{
	<div id="tab-1" class="tab-pane active">
		
	    @Html.infoCadastro(Model.ProdutoSituacao.id, null, null)

	    @using (Html.BeginForm("editar", null, FormMethod.Post, new { role = "form", @class = "default" })) {
			
			@Html.HiddenFor(m => m.ProdutoSituacao.id)

			@Html.ValidationSummary(false)

			<div class="form-horizontal">
                
			    <h4 class="separator-form">Dados Principais</h4>
               

			    <div class="col-md-8">
			        @Html.labelRequired("Descrição")
			        @Html.TextBoxFor(m => m.ProdutoSituacao.descricao, new { @class = "form-control input-sm", maxlength = "100" })
			        @Html.ValidationMessageFor(m => m.ProdutoSituacao.descricao)
			    </div>

			    <div class="col-md-4">
			        @Html.labelRequired("Status")
					@Html.DropDownListFor(m => m.ProdutoSituacao.ativo, ComboHelper.selectListStatus(Model.ProdutoSituacao.ativo), new { @class = "form-control input-sm" })
					@Html.ValidationMessageFor(m => m.ProdutoSituacao.ativo)
				</div>

			    <div class="clearfix"></div>
              

			</div>
			<div class="clearfix"></div><br />

			<div class="col-xs-12 text-right">
	            @Html.exibirBotoesFormulario(Url.Action("listar"), "N")
			</div>
	        <div class="clearfix"></div>

		}

	</div>
}

