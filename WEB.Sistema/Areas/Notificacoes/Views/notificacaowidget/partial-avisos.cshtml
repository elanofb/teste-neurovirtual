@model IList<ItemNotificacaoWidget>
@using WEB.Areas.Notificacoes.ViewModels

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="far fa-bell"></i>
    <span class="label label-warning">@Model.Count</span>
</a>
<ul class="dropdown-menu">
    @if (Model.Count > 0){
        <li>
            <p style="padding:5px;">Existe(m) @Model.Count aviso(s) para você.</p>
            <ul class="menu">
                @foreach (ItemNotificacaoWidget Item in Model){
                    <li class="item-notificacao-aviso">
                        <div class="col-sm-12 fs-11">
                            <div class="bordered-gray-bottom-1 padding-top-5 padding-bottom-5">
                                <a href="javascript:void(0)" onclick="Notificacao.registrarLeitura(@Item.id);">
                                    <i class="glyphicon glyphicon-ok"></i> <strong>@Item.titulo</strong><br />
                                    @Item.notificacao.abreviar(255)
                                </a>
                            </div>
                        </div>
                    </li>
                }

            </ul>
        </li>
    }else{
        <li class="header">Você não tem avisos no momento</li>
    }

    <li class="footer"> <a href="@Url.Action("index", "AvisoSistemaLista", new {area = "AvisosNotificacoes"})">Ver Todos</a>
</ul>
