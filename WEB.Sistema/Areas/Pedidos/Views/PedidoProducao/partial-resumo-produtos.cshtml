@model WEB.Areas.Pedidos.ViewModels.PedidoProducaoVM


@foreach (var OItemProduto in Model.listaResumoProdutos) {
    
    <div class="row" style="border-bottom: 1px solid #f4f4f4">
        
        <div class="col-md-8">
            <h5>@OItemProduto.nome</h5>
        </div>
        
        <div class="col-md-2">
            <h5>@OItemProduto.qtd</h5>
        </div>
        
        <div class="col-md-2 text-right">
            
            <div class="dropdown margin-top-10">
                
                <a href="javascript:;" class="dropdown-toggle text-black" type="button" data-toggle="dropdown">
                    <i class="fa fa-cog"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">

                    <li>
                        <a href="javascript:;" onclick="PedidoProducao.imprimir(this, '@OItemProduto.id')" data-url="@Url.Action("Index", "EtiquetaProduto", new { Area = "Etiquetas" })"><i class="fa fa-print"></i> Imprimir Etiquetas</a>
                    </li>

                </ul>
            </div>
            
        </div>
        <div class="clearfix"></div>
        
        @if (!OItemProduto.observacoes.isEmpty()) {
            <div class="col-md-11">
                <p><strong>Obs:</strong> @OItemProduto.observacoes</p>
            </div>
        }
        <div class="clearfix"></div>

    </div>
}

