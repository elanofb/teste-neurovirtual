@model List<DAL.Pedidos.PedidoHistorico>

@{
    Layout = null;
}

<h4 class="separator-form">Histórico do Pedido</h4>
<div class="col-md-12">
    <table class="table table-bordered table-striped dataTable">
        <thead>
            <tr role="row">
                <th class="width-50"></th>
                <th class="width-150 text-center">Data</th>
                <th class="width-200">Ocorrência</th>
                <th>Observação</th>
                @*<th>Envio por e-mail</th>*@
                <th class="width-50">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0) {
                int cont = Model.Count;
                foreach (var Item in Model) {
                    <tr>
                        <td class="text-center">@cont</td>
                        <td class="text-center">@Item.dtOcorrencia</td>
                        <td class="text-left">@Item.TipoOcorrenciaPedido.descricao</td>
                        <td class="text-center">@Item.observacoes</td>
                        <td class="text-center">-</td>
                    </tr>
                    cont--;
                }
            } else {
                <tr>
                    <td colspan="5" class="text-center"> Nenhuma ocorrência registrada.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="clearfix"></div>