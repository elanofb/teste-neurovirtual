@model WEB.Areas.Pedidos.ViewModels.PedidoMontagemVM


@foreach (var OItemProduto in Model.listaResumoProdutos) {
    <div class="col-lg-12 col-xs-12 no-padding" style="border-bottom: 1px solid #f4f4f4">
        <div class="col-md-8">
            <h5>@OItemProduto.nome</h5>
        </div>
        <div class="col-md-4">
            <h5>@OItemProduto.qtd</h5>
        </div>
        @if (!OItemProduto.observacoes.isEmpty()) {
            <div class="col-md-11">
                <p><strong>Obs:</strong> @OItemProduto.observacoes</p>
            </div>
        }
        <div class="clearfix"></div>

    </div>
}

