    <input type="text" data-max="@Model.totalPedidos" id="totalPedidosHoje" class="dial" data-fgColor="#f39c12">
    <div class="knob-label">
        <a href="javascript:;" target="_blank" style="color: #f39c12; font-weight: bold;">
            Total de Pedidos para hoje 
        </a>
    </div>
</div>

<div class="col-lg-2 col-xs-6 text-center borderred-silver-right margin-bottom-20">
    <input type="hidden" id="totalPedidosAmanhaValue" value="@Model.totalPedidosProximos">
    <input type="text" data-max="@Model.totalPedidos" id="totalPedidosAmanha" class="dial" data-fgColor="#00a65a">
    <div class="knob-label">
        <a href="javascript:;" target="_blank" style="color: #00a65a; font-weight: bold;">
            Total de Pedidos para os próximos 5 dias 
        </a>
    </div>
</div>


<div class="clearfix"></div>