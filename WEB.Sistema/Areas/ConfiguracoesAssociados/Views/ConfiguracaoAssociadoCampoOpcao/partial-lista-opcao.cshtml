@model List<DAL.ConfiguracoesAssociados.ConfiguracaoAssociadoCampoOpcao>

@{
    Layout = null;
}
<div class="table-responsive">
    <div class="dataTables_wrapper form-inline" role="grid">
        <table class="table table-bordered table-striped dataTable">
            <thead>
                <tr>
                    <th>Value</th>
                    <th>Texto</th>
                    <th width="50">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any()) {
                    foreach (var Item in Model) {
                        <tr>
                            <td>@Item.value</td>
                            <td>@Item.texto</td>
                            <td>
                                <a href="javascript:void(0)" onclick="AssociadoCampoOpcao.editarOpcao(this)" data-url="@Url.Action("partial-form-opcao", "ConfiguracaoAssociadoCampoOpcao", new {idCampo = Item.idConfiguracaoAssociadoCampo, id = Item.id})" data-toggle="tooltip" title="Editar registro"><i class="fa fa-edit text-black"></i></a>&nbsp;
                                <a href="javascript:void(0)" onclick="AssociadoCampoOpcao.excluirOpcao(this)" data-url="@Url.Action("excluir", "ConfiguracaoAssociadoCampoOpcao")" data-id="@Item.id" data-toggle="tooltip" title="Excluir registro"><i class="fa fa-trash text-black"></i></a>
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td colspan="3">Nenhum registro encontrado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>