@model WEB.Areas.ConfiguracoesAssociados.ViewModels.AssociadoCampoGrupoForm
@using MvcFlashMessages
@{
    Layout = null;

    string idBox = IsPost ? "" : "boxGrupoCampos-"+ (Model.AssociadoCampoGrupo.idTipoCampoCadastro);
}

<div id="@idBox">

    @Html.RenderFlash()

    <div class="row">

        @using (Ajax.BeginForm("salvar-form-grupo", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = idBox, OnSuccess = "AssociadoCampoGrupo.onSucessForm"}, new { })) {
            
            @Html.HiddenFor(x => x.AssociadoCampoGrupo.id)

            @Html.HiddenFor(x => x.AssociadoCampoGrupo.ordemExibicao)

            @Html.HiddenFor(x => x.AssociadoCampoGrupo.idTipoCampoCadastro)

            @Html.HiddenFor(m => m.AssociadoCampoGrupo.idOrganizacao)

            @Html.ValidationSummary(false)

            <div class="col-sm-6">
                @Html.labelRequired("Nome do grupo")
                @Html.TextBoxFor(x => x.AssociadoCampoGrupo.descricao, new { @class = "form-control input-sm", maxlength="100" })
            </div>

            <div class="col-sm-2">
                @Html.labelRequired("CSS Box")
                @Html.TextBoxFor(x => x.AssociadoCampoGrupo.cssBoxGrupo, new { @class = "form-control input-sm" })
            </div>

            <div class="col-sm-2">
                @Html.labelRequired("Html após box")
                @Html.TextAreaFor(x => x.AssociadoCampoGrupo.htmlAposBox, new { @class = "form-control input-sm" })
            </div>

            <div class="col-sm-2 padding-top-20">
                <button type="submit" name="enviar" class="btn btn-sm btn-primary link-loading">OK</button>
            </div>
        }
    </div>
</div>