@model WEB.Areas.RamosAtividade.ViewModels.RamoAtividadeForm
@if (Model.RamoAtividade.id > 0) {

    <div class="form-horizontal">
        <div class="col-xs-2 col-lg-2">
            <label class="no-margin">ID</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.RamoAtividade.id" />
        </div>
        <div class="col-xs-3 col-lg-2">
            <label class="no-margin">Cadastrado em:</label>
            <input type="text" class="form-control input-sm text-center" readonly="readonly" value="@Model.RamoAtividade.dtCadastro" />
        </div>
        <div class="col-xs-3 col-lg-2">
            <label class="no-margin">Alterado em:</label>
            <input type="text" class="form-control input-sm text-center" readonly="readonly" value="@Model.RamoAtividade.dtAlteracao" />
        </div>

    </div>
    <div class="clearfix"></div>
}