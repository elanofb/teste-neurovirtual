@model WEB.Areas.Mailings.ViewModels.TipoMailingForm

@if (Model.TipoMailing.id > 0) {
    <div class="form-horizontal">
        <div class="col-xs-2">
            <label class="no-margin">ID</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.TipoMailing.id" />
        </div>
        <div class="col-xs-3">
            <label class="no-margin">Cadastrado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.TipoMailing.dtCadastro" />
        </div>
        <div class="col-xs-3">
            <label class="no-margin">Alterado em:</label>
            <input type="text" class="form-control input-sm" readonly="readonly" value="@Model.TipoMailing.dtAlteracao" />
        </div>
    </div>
    <div class="clearfix"></div>
}